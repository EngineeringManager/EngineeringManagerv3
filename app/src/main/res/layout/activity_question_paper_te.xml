<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dexterlabs.khand.engineeringmanager.QuestionPaper"
    android:background="@color/grey">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="@color/lblue"
        android:fontFamily="@font/roboto_mono_thin"
        android:paddingBottom="50sp"
        android:paddingTop="50sp"
        android:text="Question Papers TE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold" />

    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="45sp"
        android:layout_marginBottom="35sp"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text">

    </android.support.v7.widget.RecyclerView>

    <!-- Banner Ads XML With our Banner unit id-->
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8465300425811174/1074141625">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
