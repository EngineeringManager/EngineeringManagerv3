<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".videoTuts"
    android:background="@color/grey"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="#4fc3f7"
        android:fontFamily="@font/roboto_mono_thin"
        android:paddingBottom="15sp"
        android:paddingTop="20sp"
        android:text="Video Selector"

        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        />
    <ExpandableListView
        android:layout_below="@+id/text"
        android:groupIndicator="@null"
        android:id="@+id/expandible_listview"
        android:layout_width="match_parent"
android:layout_marginTop="20sp"
        android:layout_marginBottom="50sp"

        android:layout_height="match_parent">

    </ExpandableListView>


    <!-- Banner Ads XML With our Banner unit id-->
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-5511563189229990/9850171496">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>